bin_PROGRAMS = msmtp

msmtp_SOURCES = \
	conf.c conf.h \
	list.c list.h \
	msmtp.c \
	net.c net.h \
	netrc.c netrc.h \
	readbuf.c readbuf.h \
	rfc6555.c rfc6555.h \
	smtp.c smtp.h \
	stream.c stream.h \
	tools.c tools.h \
	xalloc.c xalloc.h \
	gettext.h \
	aliases.c aliases.h \
	password.c password.h

if HAVE_TLS
msmtp_SOURCES += tls.c tls.h
endif

if HAVE_LIBGSASL
else
msmtp_SOURCES += base64.c base64.h md5.c md5.h md5-apps.c md5-apps.h
endif

AM_CPPFLAGS = $(tls_CFLAGS) $(libgsasl_CFLAGS) $(libidn2_CFLAGS) $(libsecret_CFLAGS)

msmtp_LDADD =  $(tls_LIBS) $(libgsasl_LIBS) $(libidn2_LIBS) $(libsecret_LIBS) $(LIBINTL)

DEFS += -DSYSCONFDIR=\"$(sysconfdir)\" -DLOCALEDIR=\"$(localedir)\" -DBINDIR=\"$(bindir)\"

if BUILD_MSMTPD
bin_PROGRAMS += msmtpd
msmtpd_SOURCES = msmtpd.c
endif
